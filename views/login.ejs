<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title>Log In</title>
    <style>
        .moving-buses {
            position: relative;
            width: 100%;
            height: 60px; 
            overflow: hidden;
            background-color: #002147;
        }

        .bus-icon {
            position: absolute;
            width: 100px; 
            animation: moveBus 15s linear infinite; 
            opacity: 1; 
        }

        .bus-icon:nth-child(1) {
            animation-delay: 0s; 
        }

        .bus-icon:nth-child(2) {
            animation-delay: 2.5s; 
        }

        .bus-icon:nth-child(3) {
            animation-delay: 5s; 
        }

        .bus-icon:nth-child(4) {
            animation-delay: 7.5s; 
        }

        .bus-icon:nth-child(5) {
            animation-delay: 10s; 
        }

        .bus-icon:nth-child(6) {
            animation-delay: 12.5s; 
        }

        @keyframes moveBus {
            0% {
                left: 100%; /* Start off-screen to the right */
            }
            100% {
                left: -120px; /* Move off-screen to the left */
            }
        }

        body {
            background-color: #B0C4DE
        }
    </style>
</head>
<body>

    <div class="moving-buses">
        <img src="/bus.png" alt="Bus" class="bus-icon">
        <img src="/bus.png" alt="Bus" class="bus-icon">
        <img src="/bus.png" alt="Bus" class="bus-icon">
        <img src="/bus.png" alt="Bus" class="bus-icon">
        <img src="/bus.png" alt="Bus" class="bus-icon">
        <img src="/bus.png" alt="Bus" class="bus-icon">
    </div>

    <div class="d-flex flex-column align-items-center vh-100 justify-content-start" style="padding-top: 50px;">
        <h1 class="text-center mb-4">Please Log In</h1>
        <div class="card p-4" style="width: 400px;">
            <form action="/log-in" method="POST">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input id="username" class="form-control" name="username" placeholder="Username" type="text" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" class="form-control" name="password" type="password" />
                </div>
                <a href="/register">Create Account</a> <br>
                <button type="submit" class="btn btn-primary mt-2">Log In</button>
            </form>
        </div>
    </div>

    <footer class="bg-dark text-center py-3 mt-4">
        <a href="/" class="mx-2 text-decoration-none text-light">Home</a>
        <a href="/admin" class="mx-2 text-decoration-none text-light">Admin(test)</a>
    </footer>

    <audio id="button-sound" src="/button_click.mp3" preload="auto"></audio>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const buttonSound = document.getElementById('button-sound');
            const buttons = document.querySelectorAll('button, a.btn'); // Include <a> tags with the "btn" class

            buttons.forEach(button => {
                button.addEventListener('click', (event) => {
                    const href = button.getAttribute('href'); // Get the href attribute for links
                    const isLink = button.tagName === 'A' && href; // Check if it's a link

                    buttonSound.currentTime = 0; // Reset the sound to the beginning
                    buttonSound.play(); // Play the sound

                    if (isLink) {
                        event.preventDefault(); // Prevent immediate navigation
                        setTimeout(() => {
                            window.location.href = href; // Navigate after the sound plays
                        }, 300); // Delay navigation to allow sound to play
                    }
                });
            });
        });
    </script>
</body>
</html>