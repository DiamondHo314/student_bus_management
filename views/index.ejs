<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <title>Home</title>
</head>
<body>
    <body>
        <div class="container mt-2">
            <h1 class="mb-2">WELCOME BACK <%= user.name %></h1>
            <h2>Your last ride</h2>
            <% if (busRouteName != null) { %>
                <% console.log('bus route name: ', busRouteName) %>
                <p>You took <%= busRouteName %> today</p> 
            <% } else { %>
                <p>You did not take any bus yet!</p> 
            <% } %> 
            <br>
            <h3> your balance: <%= user.balance %></h3> 
            <button type="button" class="btn btn-primary" onclick="updateBalance()">Add balance</button>
            <br>
            <a href="/ratings">Rate Staff</a>
            <a style="color: red;" href="/log-in/log-out">LOG OUT</a>
        </div>

    <footer class="bg-light text-center py-3 mt-4">
        <a href="/" class="mx-2 text-decoration-none">Home</a>
        <a href="/register" class="mx-2 text-decoration-none">Register</a>
    </footer>

    <script>
        function updateBalance() {
            const amount = prompt("Enter balance money amount:");
            if (amount && !isNaN(amount) && amount > 0) {
            fetch('/update-balance', {
                method: 'POST',
                headers: {
                'Content-Type': 'application/json',
                },
                body: JSON.stringify({ amount: parseFloat(amount) }), //makes sure amount is float
                //because in db, balance datatype is float
            })
                .then((response) => {
                if (response.ok) {
                    alert('Balance updated successfully!');
                    location.reload(); // reload the page to reflect the updated balance
                } else {
                    alert('Failed to update balance. Please try again.');
                }
                })
                .catch((error) => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
                });
            } else {
            alert('Please enter a valid amount.');
            }
        }
    </script>

</body>
</html>